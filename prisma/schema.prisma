// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ---- Models ----

model Track {
  id        Int      @id @default(autoincrement())
  artist    String
  title     String
  brand     String?
  source    String?
  url       String?
  imageUrl  String?
  createdAt DateTime @default(now())
  purchaseUrl String?
}

model LegacyTrack {
  id        Int      @id @default(autoincrement())
  artist    String
  title     String
  brand     String?   // manufacturer (Sound Choice, Chartbuster, Sunfly, etc.)
  discId    String?   // e.g. SC8139-05
  url       String?   // optional (wiki/discogs page, etc.)
  createdAt DateTime  @default(now())

  @@index([artist])
  @@index([title])
  @@index([brand])
  @@unique([artist, title, brand, discId])
}

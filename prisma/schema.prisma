// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ---- Models ----

model Track {
  id        Int      @id @default(autoincrement())
  artist    String
  title     String
  brand     String?
  source    String?
  url       String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

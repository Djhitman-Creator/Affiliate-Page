// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Keep sqlite for now to match file:/tmp/dev.db on Vercel
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ---- Models ----

model Track {
  id        Int      @id @default(autoincrement())
  artist    String
  title     String
  brand     String?
  source    String?
  url       String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

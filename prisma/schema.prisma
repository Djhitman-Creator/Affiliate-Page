// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ---- Models ----

model Track {
  id           Int      @id @default(autoincrement())
  source       String?
  artist       String
  title        String
  brand        String?
  trackId      String?      // NEW: Party Tyme / KV product code or SKU
  url          String?
  purchaseUrl  String?
  imageUrl     String?
  createdAt    DateTime @default(now())

  @@unique([source, trackId], name: "source_trackId") // NEW: one row per SKU when trackId is present
}


model LegacyTrack {
  id        Int      @id @default(autoincrement())
  artist    String
  title     String
  brand     String?   // manufacturer (Sound Choice, Chartbuster, Sunfly, etc.)
  discId    String?   // e.g. SC8139-05
  url       String?   // optional (wiki/discogs page, etc.)
  createdAt DateTime  @default(now())

  @@index([artist])
  @@index([title])
  @@index([brand])
  @@unique([artist, title, brand, discId])
}
